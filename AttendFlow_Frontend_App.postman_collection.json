{
	"info": {
		"_postman_id": "frontend-app-collection",
		"name": "AttendFlow - Frontend App (User Portal)",
		"description": "API collection for AttendFlow Frontend Application - User Portal. This collection contains endpoints used by Students, Teachers, and Admins for daily operations.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000/api/v1",
			"type": "string"
		},
		{
			"key": "jwt_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "role",
			"value": "",
			"type": "string"
		}
